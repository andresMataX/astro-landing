---
import projects from '../../config/projects.json'
---

<h2 class="font-bold text-5xl my-5">Projects</h2>

{
  projects.map(({ title, description, image }) => (
    <div class="flex text-center md:text-left">
      <div class="flex-1 gap-y-3 flex-col">
        <h2 class="font-bold text-2xl my-4">{title}</h2>
        <p>{description}</p>
        <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400 mt-2 mb-8">
          More info
        </button>
      </div>
      <div class="flex-1">
        <img src={image} alt={title} class="w-72 m-auto" />
      </div>
    </div>
  ))
}
